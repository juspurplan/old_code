<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/options_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Back To Menu" />

    <TextView
        android:id="@+id/options_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Options"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/options_numletters_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/options_title"
        android:layout_below="@+id/options_title"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/options_numletters_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/options_numletters_spinner"
        android:layout_alignRight="@+id/options_title"
        android:layout_alignTop="@+id/options_numletters_spinner"
        android:layout_marginRight="48dp"
        android:width="200sp"
        android:gravity="right"
        android:text="TextView" />

</RelativeLayout>